<!DOCTYPE html>
<html>
  <head>
    <title>{{ pocTitleText }}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript">
    function swapImage(){
      var image = document.getElementById("pocImage");
      var dropd = document.getElementById("vaderImgSwap");
      image.src = dropd.options[dropd.selectedIndex].title;   
    };
    </script>
  </head>
  <body>
    <table border="0" cellpadding="5" width="600px">
      <tr>
        <td align="left" valign="top">
           <h1>{{ pocHeaderText }}</h1>
          <h4>{{ pocQuoteText }}</h4>
        </td>
        <td align="left" valign="middle">
          <h4>Choose an image:</h4>
          <form name="VaderPoc">
            <select id="vaderImgSwap" onChange="swapImage()" style="width: 150px">
              <option value=""></option>
              <option value="{{pocImage1}}" title="/images/{{pocImage1}}" selected >Image One</option>
              <option value="{{pocImage2}}" title="/images/{{pocImage2}}">Image Two</option>
              <option value="{{pocImage3}}" title="/images/{{pocImage3}}">Image Three</option>
            </select>
          </form>
        </td>
      </tr>
    </table> 
    <img id ="pocImage" src="/images/{{ pocImage1 }}"></img>
   </body>
</html>
